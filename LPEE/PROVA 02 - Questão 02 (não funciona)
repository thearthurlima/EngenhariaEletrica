#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 100

int dividirString(char string[MAX], char stringDividida[MAX][MAX], int tamanhoDaString)
{
	int i;
	int posicaoDaPalavra = 0, tamanhoDaPalavra = 0;
	
	for(i = 0; string[i] != '\0')
	{
		tamanhoDaPalavra++
	}
	
	return 0;
}

int exibeMatriz(char matriz[MAX][MAX])
{
	for(int i = 0; i != '\0'; i++)
	{
		for(int j = 0; j != '\0'; j++)
		printf(" %c ", matriz[i][j]);
	}
}

int acharPalindromo(char string[MAX], int posicaoDaPalavra, int tamanhoDaPalavra)
{
	int contagem = 0;
	
	for(int i = posicaoDaPalavra, j = posicaoDaPalavra + tamanhoDaPalavra-1; i != j ; i++, j--)
	{
		if(string[i] == string[j])
		contagem++;
	}
	
	if(contagem == (tamanhoDaPalavra)/2)
	return 1;
	else
	return 0;
}

int trocaPalindromo(char string[MAX], int posicaoDaPalavra, int tamanhoDaPalavra, int ehPalindromo)
{
	if(ehPalindromo == 1)
	{
		string[posicaoDaPalavra] = '*';
		string[posicaoDaPalavra+1] = '\0';
	}
}

main ()
{
	char string[MAX];
	char stringAlterada[MAX];
	char stringDividida[MAX][MAX];
	int ehPalindromo;
	int posicaoDaPalavra = 0;
	int tamanhoDaPalavra = 3;
	
	
	printf("Digite uma string: ");
	fgets(string, MAX, stdin);
	int tamanhoDaString = strlen(string);
	
	ehPalindromo = acharPalindromo(string, posicaoDaPalavra, tamanhoDaPalavra);
	
	if(ehPalindromo == 1)
	printf("\nEh palindromo!");
	else
	printf("\nNao eh palindromo!");
	
	dividirString(string, stringDividida, tamanhoDaString);
	exibeMatriz(stringDividida);
	
	trocaPalindromo(string, posicaoDaPalavra, tamanhoDaPalavra, ehPalindromo);
	/*printf("\nStringAlterada: %s", string);*/
	
	return 0;
}
