 	float somatorio = 0.0;
 	float media;
 	
 	for(int i = 0; i < NDENOTAS; i++)
 	{
 		somatorio += nota[i];
	 }
	 
	 media = somatorio/NDENOTAS;
	 
	 return media;
}*/

float calculaMediaDaTurma (struct alunos dadosDosAlunos, int numeroDeAlunos)
{
	float somatorio = 0.0;
	float media;
	
	for(int i = 0; i < numeroDeAlunos; i++)
	{
		for(int j = 0; j < NDENOTAS; j++)
		{
			somatorio += dadosDosAlunos.nota[i];
		}
	}
	
	media = somatorio/numeroDeAlunos * NDENOTAS;
	
	return media;
}

void leDadosDosAlunos (struct alunos dadosDosAlunos, int numeroDeAlunos)
{
	for(int i = 0; i < numeroDeAlunos; i++)
	{
		printf("%d ALUNO", i+1);
		printf("\nDigite o nome do aluno: ");
		fgets(dadosDosAlunos.nome, MAXSTRING, stdin);
		printf("\nDigite as notas do aluno:\n");
		for(int j = 0; j < NDENOTAS; j++)
		{
			scanf("%f", dadosDosAlunos.nota[j]);
		}
	}
}

int main ()
{
	struct alunos dadosDoAluno[MAXDEALUNOS];
	float mediaDaTurma;
	int numeroDeAlunos;
	
	printf("Entre o numero de alunos: ");
	scanf("%d", &numeroDeAlunos);
	
	leDadosDosAlunos(dadosDoAluno, numeroDeAlunos);
	mediaDaTurma = calculaMediaDaTurma(dadosDoAluno.nota, numeroDeAlunos);
	
	printf("A media da turma e: %f ", mediaDaTurma);
}

