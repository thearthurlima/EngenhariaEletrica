#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define NDENOTAS 5
#define MAXDEALUNOS 40
#define MAXSTRING 100

struct alunos
{
	char nome[MAXSTRING];
	float nota[NDENOTAS];
	float mediaDoAluno;
};

/*float calculaMediaDoAluno(float nota[NDENOTAS])
