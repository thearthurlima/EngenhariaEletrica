#include <stdio.h>
#include <stdlib.h>
#define MAX 100

int lerMatriz(char matriz[MAX][MAX], int linhas, int colunas)
{	
	for(int i = 0; i < linhas; i++)
	{
		for(int j = 0; j < colunas; j++)
		{
			scanf(" %c", &matriz[i][j]);
		}
	}
	
	return 0;
}

int exibirMatriz(char matriz[MAX][MAX], int linhas, int colunas)
{	
	for(int i = 0; i < linhas; i++)
	{
		for(int j = 0; j < colunas; j++)
		{
			printf(" %c ", matriz[i][j]);
		}
	printf("\n");
	}
	
	return 0;
}

int encontrarPadrao(char matriz[MAX][MAX], int linhas, int colunas)
{
	int contagem = 0;
	
	for(int i = 0; i < linhas-1; i++)
	{
		for(int j = 0; j < colunas-1; j++)
		{
			if(matriz[i][j] == '*' && matriz[i+1][j] == '*' && matriz[i+1][j+1] == '*')
			contagem++;
		}
	printf("\n");
	}
	
	return contagem;
}

int main ()
{
	int linhas, colunas;
	char matriz[MAX][MAX];
	
	printf("Defina o tamanho da matriz.\nDigite o numero de LINHAS da matriz: ");
	scanf("%d", &linhas);
	printf("Digite o numero de COLUNAS da matriz: ");
	scanf("%d", &colunas);
	
	printf("\nDigite os valores da matriz:\n");
	lerMatriz(matriz, linhas, colunas);
	
	printf("\n\n");
	exibirMatriz(matriz, linhas, colunas);
	
	printf ("O padrao\n * \n * * foi encontrado %d vezes", encontrarPadrao(matriz, linhas, colunas));
	
	return 0;
}
