/*Dada uma string do usuário, colocar as letras
maiusculas na frente e minúsculas atrás.
Ex.: "aAbBcC" vira "ABCabc".*/ 

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 100

int main()
{
	char string[MAX], minusculas[MAX], maiusculas[MAX], caracteres[MAX], digitos[MAX];
	int i = 0, j = 0, k = 0, l = 0;
	
	printf("Digite uma string: ");
	fgets(string, MAX, stdin);
	
	while(string[i] != '\0')
	{
		if(string[i] >= 'a' && string[i] <= 'z'){
	    	minusculas[j] = string[i];
	    	j++;
		}
		
		else if(string[i] >= 'A' && string[i] <= 'Z'){
	    	maiusculas[k] = string[i];
		    k++;
		}
		
		else{
	    	caracteres[l] = string[i];
		    l++;
		}
		
		i++;
	}
	
	printf("%s%s", maiusculas, minusculas);
}
