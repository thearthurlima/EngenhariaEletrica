#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define NDENOTAS 5
#define MAXDEALUNOS 40
#define MAXSTRING 100

struct alunos
{
	char nome[MAXSTRING];
	float nota[NDENOTAS];
	float mediaDoAluno;
};

float calculaMediaDaTurma(struct alunos dadosDosAlunos[], int numeroDeAlunos)
{
	float somatorio = 0.0;
	float media;

	for (int i = 0; i < numeroDeAlunos; i++)
	{
		for (int j = 0; j < NDENOTAS; j++)
		{
			somatorio += dadosDosAlunos[i].nota[j];
		}
	}

	media = somatorio / (numeroDeAlunos * NDENOTAS);

	return media;
}

void leDadosDosAlunos(struct alunos dadosDosAlunos[], int numeroDeAlunos)
{
	for (int i = 0; i < numeroDeAlunos; i++)
	{
		printf("Aluno %d\n", i + 1);
		printf("Digite o nome do aluno: ");
		fgets(dadosDosAlunos[i].nome, MAXSTRING, stdin);
		printf("Digite as notas do aluno:\n");
		for (int j = 0; j < NDENOTAS; j++)
		{
			scanf("%f", &dadosDosAlunos[i].nota[j]);
		}
	}
}

int main()
{
	struct alunos dadosDoAluno[MAXDEALUNOS];
	float mediaDaTurma;
	int numeroDeAlunos;

	printf("Entre o numero de alunos: ");
	scanf("%d", &numeroDeAlunos);
	getchar(); // Limpa o buffer do teclado após a leitura do número de alunos

	leDadosDosAlunos(dadosDoAluno, numeroDeAlunos);
	mediaDaTurma = calculaMediaDaTurma(dadosDoAluno, numeroDeAlunos);

	printf("A media da turma e: %f\n", mediaDaTurma);

	return 0;
}
