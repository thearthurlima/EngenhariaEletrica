programa
{
	funcao inicio()
	{
		real  matriz[3][2]
		inteiro indice

		escreva("Entre com a 1ยบ linha da matriz:\n")
		para(indice = 0; indice < 2; indice++)
		{
			leia(matriz[0][indice])
		}
		escreva("Entre com a 2ยบ linha da matriz:\n")
		para(indice = 0; indice < 2; indice++)
		{
			leia(matriz[1][indice])
		}
		escreva("Entre com a 3ยบ linha da matriz:\n")
		para(indice = 0; indice < 2; indice++)
		{
			leia(matriz[2][indice])
		}

		escreva("\n")
		para(indice = 0; indice < 2; indice++)
		{
			escreva(matriz[0][indice]," ")
		}
		escreva("\n")
		para(indice = 0; indice < 2; indice++)
		{
			escreva(matriz[1][indice]," ")
		}
		escreva("\n")
		para(indice = 0; indice < 2; indice++)
		{
			escreva(matriz[2][indice]," ")
		}
	}
}
