programa
{
	
	funcao inicio()
	{
		const inteiro NUMERO_MAXIMO_DE_ELEMENTOS = 40
		inteiro indice, indice2, numeroDeElementos
		real vetor[NUMERO_MAXIMO_DE_ELEMENTOS], menorValor = 0.0, maiorValor = 0.0, somatorio = 0.0

		escreva("Este é um programa lê números reais inseridos pelo usuário e exibe:\n")
		escreva("1. O maior deles;\n2. O menor deles; 3. A média dos valores;\n4. O desvio padrão entre entre eles.")
		escreva("\n\nQuantos números você deseja inserir? ")
		leia(numeroDeElementos)
		escreva("\nEntre com ", numeroDeElementos, " números reais:\n")
		
		para(indice = 0; indice < numeroDeElementos; indice++)
		{
			leia(vetor[indice])
		}
		
		menorValor = vetor[0]
		para(indice = 0; indice < numeroDeElementos; indice++)
		{
			se(menorValor <= vetor[indice])
			{
				menorValor = menorValor
			}
			senao
			{
				menorValor = vetor[indice]
			}
		}
		maiorValor = vetor[0]
		para(indice = 0; indice < numeroDeElementos; indice++)
		{
			se(maiorValor >= vetor[indice])
			{
				maiorValor = maiorValor
			}
			senao
			{
				maiorValor = vetor[indice]
			}
		}
		para(indice = 0; indice < numeroDeElementos; indice++)
		{
			somatorio+= vetor[indice]
		}
	}
}
